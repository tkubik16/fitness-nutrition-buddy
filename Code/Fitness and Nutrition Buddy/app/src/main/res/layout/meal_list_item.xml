<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item_food"
    >


    <TextView
        android:id="@+id/calorie_text"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/foodname_text"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/image_list"
        android:ellipsize="marquee"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/protein_text"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calorie_text"
        android:layout_alignLeft="@+id/calorie_text"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="0dp"
        android:ellipsize="marquee"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/fat_text"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/protein_text"
        android:layout_alignLeft="@+id/protein_text"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="0dp"
        android:ellipsize="marquee"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/sugars_text"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fat_text"
        android:layout_alignLeft="@+id/fat_text"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="0dp"
        android:ellipsize="marquee"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/foodname_text"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_list"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:ellipsize="end"
        android:maxLength="100"
        android:maxLines="1"
        android:textSize="20dp" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_below="@+id/foodname_text"
        android:layout_alignStart="@+id/foodname_text"
        android:id="@+id/brandname_text"/>

    <TextView android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_toEndOf="@+id/brandname_text"
        android:layout_marginStart="7dp"
        android:layout_alignBottom="@+id/brandname_text"
        android:id="@+id/serving_text"/>

    <ImageView android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:id="@+id/image_list"/>

</RelativeLayout>
