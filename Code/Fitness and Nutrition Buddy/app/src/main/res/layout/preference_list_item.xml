<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item_preference">

    <TextView
        android:id="@+id/prefname_text"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_list1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:ellipsize="end"
        android:maxLength="100"
        android:maxLines="1"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/comparision_text"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/prefname_text"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/image_list1"
        android:ellipsize="marquee"
        android:textSize="12sp" />

    <TextView android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:id="@+id/image_list1"/>

</RelativeLayout>