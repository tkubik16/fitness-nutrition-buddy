<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/WorkoutsFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/workoutsScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/cardioTitleButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:clickable="false"
                android:text="Cardio"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <ListView
                android:id="@+id/cardioListView"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/addCardioButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:clickable="true"
                android:elevation="10dp"
                android:text="Add Workout"
                android:textAlignment="viewStart"
                android:textColor="#0000EE" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/weightLiftingTitleButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:clickable="false"
                android:text="Weightlifting"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <ListView
                android:id="@+id/weightLiftingListView"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/addweightLiftingButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:clickable="true"
                android:elevation="10dp"
                android:text="Add Workout"
                android:textAlignment="viewStart"
                android:textColor="#0000EE" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/yogaTitleButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:clickable="false"
                android:text="Yoga"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <ListView
                android:id="@+id/yogaListView"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/addYogaButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:clickable="true"
                android:elevation="10dp"
                android:text="Add Workout"
                android:textAlignment="viewStart"
                android:textColor="#0000EE" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <ListView
                android:id="@+id/exerciseLogListView2"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>